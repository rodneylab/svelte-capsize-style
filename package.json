{
	"name": "svelte-capsize-style",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"description": "Svelte Capsize styling: how you can use the Capsize typography tooling with SvelteKit to layout text predictably in your ❤️ Svelte app.",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@capsizecss/core": "^3.1.0",
		"@capsizecss/metrics": "^1.1.1",
		"@commitlint/config-conventional": "^17.4.4",
		"@fontsource/abril-fatface": "^4.5.9",
		"@fontsource/courier-prime": "^4.5.9",
		"@playwright/test": "^1.32.3",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.15.2",
		"commitlint": "^17.5.1",
		"courierPrime": "link:@capsizecss/metrics/courierPrime",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"postcss-html": "^1.5.0",
		"prettier": "^2.8.7",
		"prettier-plugin-svelte": "^2.10.0",
		"stylelint": "^15.4.0",
		"stylelint-config-recommended": "^11.0.0",
		"stylelint-config-standard": "^32.0.0",
		"svelte": "^3.58.0",
		"svelte-check": "^3.2.0",
		"typescript": "~5.0.4",
		"vite": "^4.2.1"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/svelte-capsize-styling"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/svelte-capsize-styling/issues"
	},
	"peerDependencies": {
		"vite": "^3.0.6"
	}
}

{
	"name": "svelte-capsize-style",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"description": "Svelte Capsize styling: how you can use the Capsize typography tooling with SvelteKit to layout text predictably in your ❤️ Svelte app.",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"prepare": "svelte-kit sync",
		"check": "svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@capsizecss/core": "^3.0.0",
		"@capsizecss/metrics": "^0.3.0",
		"@commitlint/config-conventional": "^17.1.0",
		"@fontsource/abril-fatface": "^4.5.8",
		"@fontsource/courier-prime": "^4.5.8",
		"@playwright/test": "^1.26.0",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"commitlint": "^17.1.2",
		"courierPrime": "link:@capsizecss/metrics/courierPrime",
		"eslint": "^8.24.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"postcss-html": "^1.5.0",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.1",
		"stylelint": "^14.12.1",
		"stylelint-config-recommended": "^9.0.0",
		"stylelint-config-standard": "^28.0.0",
		"svelte": "^3.50.1",
		"svelte-check": "^2.9.1",
		"typescript": "~4.8.3",
		"vite": "^3.1.3"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/svelte-capsize-styling"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/svelte-capsize-styling/issues"
	},
	"peerDependencies": {
		"vite": "^3.0.6"
	}
}

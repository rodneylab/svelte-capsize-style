{
	"name": "svelte-capsize-style",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"description": "Svelte Capsize styling: how you can use the Capsize typography tooling with SvelteKit to layout text predictably in your ❤️ Svelte app.",
	"scripts": {
		"dev": "vite dev",
		"start": "vite dev",
		"build": "vite build",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"lint": "prettier --ignore-path .gitignore --check --plugin=prettier-plugin-svelte . && eslint --ignore-path .gitignore .",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"prettier:check": "prettier --check --plugin=prettier-plugin-svelte .",
		"format": "prettier --ignore-path .gitignore --write --plugin=prettier-plugin-svelte ."
	},
	"devDependencies": {
		"@capsizecss/core": "^4.1.0",
		"@capsizecss/metrics": "^3.0.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@fontsource/abril-fatface": "^5.0.20",
		"@fontsource/courier-prime": "^5.0.20",
		"@playwright/test": "^1.43.1",
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/kit": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"commitlint": "^19.3.0",
		"courierPrime": "link:@capsizecss/metrics/courierPrime",
		"eslint": "^9.1.1",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^9.0.11",
		"postcss-html": "^1.6.0",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"stylelint": "^16.4.0",
		"stylelint-config-recommended": "^14.0.0",
		"stylelint-config-standard": "^36.0.0",
		"svelte": "^4.2.15",
		"svelte-check": "^3.7.0",
		"typescript": "~5.4.5",
		"vite": "^5.2.10"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/svelte-capsize-styling"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/svelte-capsize-styling/issues"
	},
	"dependencies": {
		"eslint-plugin-svelte": "^2.38.0"
	}
}

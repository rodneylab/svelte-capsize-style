{
  "name": "svelte-capsize-style",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "description": "Svelte Capsize styling: how you can use the Capsize typography tooling with SvelteKit to layout text predictably in your ❤️ Svelte app.",
  "scripts": {
    "dev": "svelte-kit dev --port 3030",
    "build": "svelte-kit build",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "prepare": "svelte-kit sync",
    "check": "svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-check --tsconfig ./jsconfig.json --watch",
    "test": "playwright test",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:css": "stylelint \"src/**/*.{css,svelte}\"",
    "prettier:check": "prettier --check --plugin-search-dir=. .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@capsizecss/core": "^3.0.0",
    "@capsizecss/metrics": "^0.2.0",
    "@commitlint/config-conventional": "^17.0.2",
    "@fontsource/abril-fatface": "^4.5.7",
    "@fontsource/courier-prime": "^4.5.7",
    "@playwright/test": "^1.22.2",
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "courierPrime": "link:@capsizecss/metrics/courierPrime",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.1",
    "postcss-html": "^1.4.1",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "stylelint": "^14.9.1",
    "stylelint-config-recommended": "^8.0.0",
    "stylelint-config-standard": "^26.0.0",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.2",
    "typescript": "~4.7.3"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/rodneylab/svelte-capsize-styling"
  },
  "bugs": {
    "url": "https://github.com/rodneylab/svelte-capsize-styling/issues"
  }
}

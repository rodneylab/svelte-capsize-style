{
	"name": "svelte-capsize-style",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"description": "Svelte Capsize styling: how you can use the Capsize typography tooling with SvelteKit to layout text predictably in your ❤️ Svelte app.",
	"scripts": {
		"dev": "vite dev",
		"start": "vite dev",
		"build": "vite build",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"lint": "prettier --ignore-path .gitignore --check --plugin=prettier-plugin-svelte . && eslint --ignore-path .gitignore .",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"prettier:check": "prettier --check --plugin=prettier-plugin-svelte .",
		"format": "prettier --ignore-path .gitignore --write --plugin=prettier-plugin-svelte ."
	},
	"devDependencies": {
		"@capsizecss/core": "^3.1.1",
		"@capsizecss/metrics": "^1.2.0",
		"@commitlint/config-conventional": "^17.6.7",
		"@fontsource/abril-fatface": "^5.0.8",
		"@fontsource/courier-prime": "^5.0.8",
		"@playwright/test": "^1.36.2",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.22.4",
		"commitlint": "^17.6.7",
		"courierPrime": "link:@capsizecss/metrics/courierPrime",
		"eslint": "^8.46.0",
		"eslint-config-prettier": "^9.0.0",
		"husky": "^8.0.3",
		"postcss-html": "^1.5.0",
		"prettier": "^3.0.1",
		"prettier-plugin-svelte": "^3.0.3",
		"stylelint": "^15.10.2",
		"stylelint-config-recommended": "^13.0.0",
		"stylelint-config-standard": "^34.0.0",
		"svelte": "^4.1.2",
		"svelte-check": "^3.4.6",
		"typescript": "~5.1.6",
		"vite": "^4.4.9"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/svelte-capsize-styling"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/svelte-capsize-styling/issues"
	},
	"dependencies": {
		"eslint-plugin-svelte": "^2.32.4"
	}
}

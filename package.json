{
	"name": "svelte-capsize-style",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"description": "Svelte Capsize styling: how you can use the Capsize typography tooling with SvelteKit to layout text predictably in your ❤️ Svelte app.",
	"scripts": {
		"dev": "vite dev",
		"start": "vite dev",
		"build": "vite build",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"lint": "prettier --check --plugin=prettier-plugin-svelte --plugin=@trivago/prettier-plugin-sort-imports . && eslint .",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"check:formatting": "prettier --check --plugin=prettier-plugin-svelte --plugin=@trivago/prettier-plugin-sort-imports .",
		"format": "prettier --ignore-path .gitignore --write --plugin=prettier-plugin-svelte --plugin=@trivago/prettier-plugin-sort-imports ."
	},
	"devDependencies": {
		"@capsizecss/core": "^4.1.2",
		"@capsizecss/metrics": "^3.4.0",
		"@commitlint/config-conventional": "^19.6.0",
		"@fontsource/abril-fatface": "^5.1.1",
		"@fontsource/courier-prime": "^5.1.1",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.16.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@trivago/prettier-plugin-sort-imports": "^5.2.1",
		"commitlint": "^19.6.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"postcss-html": "^1.8.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"stylelint": "^16.13.2",
		"stylelint-config-recommended": "^15.0.0",
		"stylelint-config-standard": "^37.0.0",
		"svelte": "^5.19.0",
		"svelte-check": "^4.1.4",
		"typescript": "~5.7.3",
		"typescript-eslint": "^8.21.0",
		"vite": "^6.0.11"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/svelte-capsize-styling"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/svelte-capsize-styling/issues"
	},
	"dependencies": {
		"eslint-plugin-svelte": "^2.46.1"
	}
}
